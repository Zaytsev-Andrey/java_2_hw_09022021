
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:controller="calc.Controller" styleClass="form" stylesheets="/css/style-calc.css"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="7" vgap="5">

    <columnConstraints>
        <ColumnConstraints percentWidth="20" hgrow="ALWAYS" />
        <ColumnConstraints percentWidth="20" hgrow="ALWAYS" />
        <ColumnConstraints percentWidth="20" hgrow="ALWAYS" />
        <ColumnConstraints percentWidth="20" hgrow="ALWAYS" />
        <ColumnConstraints percentWidth="20" hgrow="ALWAYS" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints percentHeight="15" vgrow="ALWAYS" />
        <RowConstraints percentHeight="15" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="14" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="14" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="14" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="14" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="14" vgrow="ALWAYS"/>
    </rowConstraints>

    <TextArea fx:id="inputText" GridPane.rowIndex="0" GridPane.columnIndex="0"
               GridPane.rowSpan="2" GridPane.columnSpan="5"
               GridPane.fillWidth="true" GridPane.fillHeight="true" editable="false" />



    <Button fx:id="backspace" text="&#x2190;" onAction="#btnBackspaceAction" GridPane.rowIndex="2" GridPane.columnIndex="0" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="ce" text="CE" onAction="#btnCEAction" GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="cancel" text="C" onAction="#btnCancelAction" GridPane.rowIndex="2" GridPane.columnIndex="2" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="plusMinus" text="&#xB1;" onAction="#btnPlusMinusAction" GridPane.rowIndex="2" GridPane.columnIndex="3" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="sqrt" text="&#x221A;" onAction="#btnSqrtAction" GridPane.rowIndex="2" GridPane.columnIndex="4" maxWidth="Infinity" maxHeight="Infinity" />

    <Button fx:id="seven" text="7" onAction="#btnSevenClick" GridPane.rowIndex="3" GridPane.columnIndex="0" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="eight" text="8" onAction="#btnEightClick" GridPane.rowIndex="3" GridPane.columnIndex="1" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="nine" text="9" onAction="#btnNineClick" GridPane.rowIndex="3" GridPane.columnIndex="2" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="div" text="/" onAction="#btnDivAction" GridPane.rowIndex="3" GridPane.columnIndex="3" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="percent" text="\%" onAction="#btnPercentAction" GridPane.rowIndex="3" GridPane.columnIndex="4" maxWidth="Infinity" maxHeight="Infinity" />

    <Button fx:id="four" text="4" onAction="#btnFourClick" GridPane.rowIndex="4" GridPane.columnIndex="0" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="five" text="5" onAction="#btnFiveClick" GridPane.rowIndex="4" GridPane.columnIndex="1" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="six" text="6" onAction="#btnSixClick" GridPane.rowIndex="4" GridPane.columnIndex="2" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="mul" text="*" onAction="#btnMulAction" GridPane.rowIndex="4" GridPane.columnIndex="3" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="graph" text="1/x" onAction="#btnGraphAction" GridPane.rowIndex="4" GridPane.columnIndex="4" maxWidth="Infinity" maxHeight="Infinity" />

    <Button fx:id="one" text="1" onAction="#btnOneClick" GridPane.rowIndex="5" GridPane.columnIndex="0" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="two" text="2" onAction="#btnTwoClick" GridPane.rowIndex="5" GridPane.columnIndex="1" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="three" text="3" onAction="#btnThreeClick" GridPane.rowIndex="5" GridPane.columnIndex="2" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="sub" text="-" onAction="#btnSubAction" GridPane.rowIndex="5" GridPane.columnIndex="3" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="equals" text="=" onAction="#btnEqualsAction" GridPane.rowIndex="5" GridPane.columnIndex="4" GridPane.rowSpan="2" maxWidth="Infinity" maxHeight="Infinity" />

    <Button fx:id="zero" text="0" onAction="#btnZeroClick" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="separator" text="," onAction="#btnSeparatorAction" GridPane.rowIndex="6" GridPane.columnIndex="2" maxWidth="Infinity" maxHeight="Infinity" />
    <Button fx:id="add" text="+" onAction="#btnAddAction" GridPane.rowIndex="6" GridPane.columnIndex="3" maxWidth="Infinity" maxHeight="Infinity" />

</GridPane>