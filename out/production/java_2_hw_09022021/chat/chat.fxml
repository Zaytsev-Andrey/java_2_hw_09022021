<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox fx:controller="chat.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center" styleClass="form"  stylesheets="/css/style.css">

    <TextArea fx:id="chatText" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>

    <HBox styleClass="inputPanel">
        <TextField fx:id="inputText" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" maxHeight="Infinity"
                   promptText="Введите сообщение..." onAction="#btnClickAction" />
        <Button fx:id="buttonSend" onAction="#btnClickAction">
            <graphic>
                <ImageView>
                    <Image url="/img/button_send.png" />
                </ImageView>
            </graphic>
        </Button>
    </HBox>
</VBox>